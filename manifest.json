{
    "manifest_version": 2,
    "name": "dcryptio",
    "version": "1",
    "icons": {
        "16": "assests/icon16.png",
        "32": "assests/icon32.png"
    },
    "content_scripts": [
        {
            "matches":[
                    "https://*.facebook.com/*",
                    "https://*.facebook.com/*"
            ],
            "js": ["out/src/content.js"]
        }
    ],
    
    "background": {
        "scripts": [
            "out/src/background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "assests/icon32.png",
        "default_popup": "src/popup/popup.html"
    },
    "permissions": [
        "<all_urls>",
        "webRequest",
        "webRequestBlocking"
    ]
}